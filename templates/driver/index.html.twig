{% extends 'base.html.twig' %}

{% block title %}Driver index{% endblock %}

{% block body %}

	<div class="container mt-2">
			<a href="{{ app.request.getSchemeAndHttpHost() }}" class="btn btn-primary btn-back btn-sm mt-2 ml-3">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
					<path fill-rule="evenodd" d="M11.354 3.646a.5.5 0 0 1 0 .708L7.707 8l3.647 3.646a.5.5 0 1 1-.708.708l-4-4a.5.5 0 0 1 0-.708l4-4a.5.5 0 0 1 .708 0z"/>
				</svg>
				Back to home
			</a>
		</div>
		<div class="container mt-5 mb-3">
		<div class="row">
			<div class="col-sm-8 d-flex">
				<h1>Driver index</h1>
			</div>
			<div class="col-sm-4 d-flex justify-content-end">
				<a href="{{ path('app_driver_new') }}" class="btn btn-outline-primary m-2">Create new</a>
			</div>
		</div>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Uuid</th>
				<th>Name</th>
				<th>Surname</th>
				<th>License</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
		{% for driver in drivers %}
			<tr>
				<td>{{ driver.id }}</td>
				<td>{{ driver.Uuid }}</td>
				<td>{{ driver.Name }}</td>
				<td>{{ driver.Surname }}</td>
				<td>{{ driver.License }}</td>
				<td>
					<a href="{{ path('app_driver_show', {'id': driver.id}) }}" class="btn btn-outline-info btn-sm ml-2">Show</a>
					<a href="{{ path('app_driver_edit', {'id': driver.id}) }}" class="btn btn-outline-secondary btn-sm ml-2">Edit</a>
					<a href="{{ path('app_driver_delete', {'id': driver.id}) }}" class="btn btn-outline-danger btn-sm">Delete</a>
				</td>
			</tr>
		{% else %}
			<tr>
				<td colspan="6">no records found</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
{% endblock %}
