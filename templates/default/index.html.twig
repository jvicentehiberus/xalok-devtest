{% extends 'base.html.twig' %}

{% block title %}Welcome!{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
	<div class="row">
	{% for entity in entities %}
	<div class="col-sm-4 mb-3 mb-sm-0 d-flex">
		<div class="card w-100">
			<div class="card-body d-flex flex-column justify-content-between">
					<h5 class="card-title">CRUD for {{ entity }}</h5>
					{% if entity == 'Trip' %}
							<p class="card-text">With this button you can go to the {{ entity|lower }} list and from there add a new {{ entity|lower }}.</p>
					{% else %}
							<p class="card-text">With this button you can go to the {{ entity|lower }} list and from there perform the basic actions: list the {{ entity|lower }}, add a new vehicle or modify and delete it.</p>
					{% endif %}
					<a href="/{{ entity|lower }}" class="btn btn-primary align-self-center">Go to list</a>
			</div>
		</div>
	</div>
	{% endfor %}
</div>


{% endblock %}
