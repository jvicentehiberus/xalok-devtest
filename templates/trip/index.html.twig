{% extends 'base.html.twig' %}

{% block title %}Trip index{% endblock %}

{% block body %}
    <div class="container mt-2">
        <a href="{{ app.request.getSchemeAndHttpHost() }}" class="btn btn-primary btn-back btn-sm mt-2 ml-3">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M11.354 3.646a.5.5 0 0 1 0 .708L7.707 8l3.647 3.646a.5.5 0 1 1-.708.708l-4-4a.5.5 0 0 1 0-.708l4-4a.5.5 0 0 1 .708 0z"/>
            </svg>
            Back to home
        </a>
    </div>
    <div class="container mt-5 mb-3">
    <div class="row">
        <div class="col-sm-8 d-flex">
            <h1>Trip index</h1>
        </div>
        <div class="col-sm-4 d-flex justify-content-end">
            <a href="{{ path('app_trip_new') }}" class="btn btn-outline-primary m-2">Create new</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trip in trips %}
            <tr>
                <td>{{ trip.id }}</td>
                <td>{{ trip.Date ? trip.Date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_trip_show', {'id': trip.id}) }}" class="btn btn-outline-info btn-sm ml-2">Show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
